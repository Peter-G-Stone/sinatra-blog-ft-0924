<% if @p && @p.errors %>
    <% @p.errors.full_messages.each do |msg| %>
        <p style="color: red;"><%= msg %></p>
    <% end %>
<% end %>

<h1> Create a new Post</h1>
<form method="POST" action="/posts">
    <input type="text" name="title" value="<%= @p ? @p.title : ""%> ">
    <textarea  name="body" ><%= @p ? @p.body : ""%></textarea>
    <input type="submit">
</form>